<script>
  function changeStatus(OrderId) {
    console.log("clicked")

    let val = document.getElementById("status").value
    console.log(val)
    console.log(OrderId)
    $.ajax({
      url: '/admin/changeStatus',
      method: 'post',
      data: {
        orderId: OrderId,
        value: val,
      },
      success: (data) => {
        console.log(data)
        window.location.reload()

      }
    })
  }
  function changePaymentStatus(OrderId) {
